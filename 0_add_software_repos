#!/bin/bash
set -e

# currently using:

# needed as curl no longer comes installed
sudo apt update
sudo apt install curl -y


echo "numix icon themes"
sudo add-apt-repository ppa:numix/ppa -n -y

echo "Stellarium"
sudo add-apt-repository ppa:stellarium/stellarium-releases -n -y

echo "Gaming mouses config tool"
sudo add-apt-repository ppa:libratbag-piper/piper-libratbag-git -n -y

echo "Ulauncher app launcher"
sudo add-apt-repository ppa:agornostal/ulauncher -n -y

echo "Alacritty for Ubuntu 20.04"
sudo add-apt-repository ppa:mmstick76/alacritty -n -y

echo "Better diff tool used with git"
sudo add-apt-repository ppa:aos1/diff-so-fancy -n -y

#!/bin/bash
# currently using:

# needed as curl no longer comes installed
sudo apt update
sudo apt install curl


echo "numix icon themes"
sudo add-apt-repository -y ppa:numix/ppa

echo "ultraflat icons"
sudo add-apt-repository -y ppa:noobslab/icons

echo "neovim"
sudo add-apt-repository -y ppa:neovim-ppa/stable

echo "several themes, including paper icon theme"
sudo add-apt-repository -y ppa:snwh/pulp

echo "offline documentation tool"
sudo add-apt-repository -y ppa:zeal-developers/ppa

echo "Stellarium"
sudo add-apt-repository -y ppa:stellarium/stellarium-releases

echo "Razer drivers"
sudo add-apt-repository -y ppa:openrazer/stable

echo "syncthing"
curl -s https://syncthing.net/release-key.txt | sudo apt-key add -
echo "deb http://apt.syncthing.net/ syncthing release" | sudo tee /etc/apt/sources.list.d/syncthing.list

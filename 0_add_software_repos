#!/bin/bash
set -e

# currently using:

# needed as curl no longer comes installed
sudo apt update
sudo apt install curl -y


echo "Stellarium"
sudo add-apt-repository ppa:stellarium/stellarium-releases -n -y

echo "Ulauncher app launcher"
sudo add-apt-repository ppa:agornostal/ulauncher -n -y

echo "Alacritty for Ubuntu"
sudo add-apt-repository ppa:aslatter/ppa -n -y

echo "Better diff tool used with git"
sudo add-apt-repository ppa:aos1/diff-so-fancy -n -y

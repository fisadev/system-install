#!/bin/bash
set -e

sudo apt install -y \
     gource \
     vlc \
     cheese \
     virtualbox \
     sqlitebrowser \
     rst2pdf \
     gimp \
     simplescreenrecorder \
     vinagre `# vnc client` \
     guvcview `# show webcam as a clean window, and more` \
     flameshot `# screenshots tool` \
     stellarium \
     wine-stable \
     v4l-utils `# package to configure params of webcam` \
     mplayer \
     siril `# post processing of telescope captures` \
     nodejs \
     gnome-maps \
     tdfsb `# doom-like process manager` \
     cmus \
     aria2 `# cli tool for faster downloads, even on normal http links` \
     ttyrec \
     ttygif \
     ffmpeg `# video converter and more` \
     btop `# super nice top` \
     nginx \
     usb-creator-gtk `# startup disk creator` \
     android-tools-adb scrcpy  `# both to use the phone as webcam` \
     npm

# telescope usb cam capture tool
sudo apt install -y /home/fisa/apps/installers/astrodmx-capture_0.50.11_amd64.deb

# nice interactive json visualization tool
sudo npm install -g fx

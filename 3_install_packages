    python3-dev \
    python3-venv \
    run-one \
    nocache \
    expect `# tool to automate other cli tools (inputs, etc)` \
    curl \
    libnet-dbus-perl `# required by the system monitor gnome-shell extension` \
    gnome-session \
    gnome-tweaks \
    cmatrix \
    nfs-common \
